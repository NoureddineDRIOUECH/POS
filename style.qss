/* Dark Theme Example */
QWidget {
    background-color: #2E2E2E;
    color: #FFFFFF;
    font-family: Segoe UI;
}
QPushButton {
    background-color: #555555;
    border: 1px solid #777777;
    padding: 5px;
    border-radius: 3px;
}
QPushButton:hover {
    background-color: #777777;
}
QLineEdit {
    border: 1px solid #555555;
    background-color: #444444;
    padding: 5px;
}